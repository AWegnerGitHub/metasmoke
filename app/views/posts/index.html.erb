<p id="notice"><%= notice %></p>

<h3><%= title 'Recent posts' %></h3>

<ul class="nav nav-tabs">
  <li class="<%= "active" if params[:filter].nil? %>">
    <%= link_to "All", posts_path %>
  </li>
  <li class="<%= 'active' if params[:filter] == 'undeleted' %>">
    <%= link_to "Undeleted", posts_path(:filter => :undeleted) %>
  </li>
</ul>

<table class="table" id="posts-index-table">
  <tbody>
    <% @posts.each do |post| %>
      <%= render "post", :post => post %>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
