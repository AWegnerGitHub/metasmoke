<p id="notice"><%= notice %></p>

<h3>Statistics for <%= @smoke_detector.location %></h3>

<table class="table">
  <thead>
    <tr>
      <th>Posts scanned</th>
      <th>At</th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.posts_scanned %></td>
        <td><%= time_ago_in_words statistic.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
