<h3>Blacklisted Websites</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Host</th>
      <th>Active?</th>
      <th>Created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.host %></td>
        <td><%= website.is_active ? "Yes" : "No" %></td>
        <td><%= website.created_at %></td>
        <td><%= link_to "Deactivate", url_for(:controller => :blacklist, :action => :deactivate_website, :id => website.id), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? && current_user.is_code_admin %>
  <a href="<%= url_for(:controller => :blacklist, :action => :add_website) %>" class="btn btn-primary">Add Website</a>
<% end %>

<div class="text-center">
  <%= will_paginate @websites, renderer: BootstrapPagination::Rails %>
</div>
